{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "es6",
      "dom",
      "es2015",
      "es2017.object",
      "ES2019"
    ],
    "sourceMap": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "baseUrl": "src",
    "declaration": true,
    // "declarationDir": "./dist/typings.d.ts",
    "importHelpers": true,
    "alwaysStrict": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "/demo/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*"
  ]
}
